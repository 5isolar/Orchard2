@model Orchard.Themes.Models.SelectThemesViewModel

<div class="alert alert-warning">
    <h4>Changing default themes</h4>
    <p>This page lets you change the site's themes. Try <code>SafeMode</code> and <code>TheTheme</code> for the front-end or <code>TheAdmin</code> for the admin</p>
</div>

<form asp-action="Index" method="post">
    @if (!Model.Themes.Any())
    {
        <p>@T["There are no themes installed."]</p>
    }
    else
    {
        <div class="row">
            @foreach (var themeEntry in Model.Themes)
            {
                <div class="col-sm-3">
                    <div class="card">
                        <div class="card-block">
                            <h4 class="card-title">@themeEntry.Name</h4>
                            @*@T["By"] @themeEntry.Extension.Manifest.Author*@
                            <p>@themeEntry.Extension.Manifest.Description</p>
                        </div>
                        <div class="card-footer text-muted text-xs-right">
                            @if (!themeEntry.IsCurrent)
                            {
                                <a class="btn btn-primary btn-sm" asp-route-action="SetCurrentTheme" asp-route-id="@themeEntry.Extension.Id">@T["Make Default"]</a>
                                if (themeEntry.Enabled)
                                {
                                <a asp-route-action="Disable" asp-route-id="@themeEntry.Extension.Id">@T["Disable"]</a> }
                                else
                                {
                                <a asp-route-action="Enable" asp-route-id="@themeEntry.Extension.Id">@T["Enable"]</a> 
                                }
                            }
                            else
                            {
                                @T["This is the default {0} theme", themeEntry.IsAdmin ? "Admin" : "Site"]
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</form>